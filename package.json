{
  "name": "GrinPlusPlus",
  "productName": "Grin++",
  "version": "1.0.0-alpha.1",
  "description": "Grin++ Wallet",
  "author": "David Burkett & David Tavarez",
  "license": "MIT",
  "private": true,
  "dependencies": {
    "@babel/runtime": "^7.9.6",
    "@blueprintjs/core": "^3.26.0",
    "@craco/craco": "^5.6.4",
    "@types/classnames": "^2.2.9",
    "@types/jest": "^25.2.1",
    "@types/react": "16.9.13",
    "@types/react-dom": "16.9.4",
    "@types/styled-components": "^5.1.0",
    "@types/uuid": "^7.0.3",
    "acorn": "^7.1.1",
    "classnames": "^2.2.6",
    "custom-electron-titlebar": "^3.2.2-hotfix62",
    "date-fns": "^2.12.0",
    "easy-peasy": "^3.3.0",
    "electron-log": "^4.1.2",
    "electron-updater": "^4.3.1",
    "immutability-helper": "^3.0.2",
    "node-fetch": "^2.6.0",
    "node-sass": "^4.14.0",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-dropzone": "^10.2.2",
    "react-number-format": "^4.4.0",
    "react-router-dom": "^5.1.2",
    "react-scripts": "^3.4.1",
    "styled-components": "^5.1.0",
    "typed-rest-client": "^1.7.3",
    "typescript": "^3.8.3",
    "uuid": "^7.0.3"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "devDependencies": {
    "@testing-library/react": "^9.5.0",
    "@types/enzyme": "^3.10.5",
    "@types/enzyme-adapter-react-16": "^1.0.6",
    "@types/file-saver": "^2.0.1",
    "@types/react-router-dom": "^5.1.5",
    "@typescript-eslint/eslint-plugin": "^2.30.0",
    "@typescript-eslint/parser": "^2.30.0",
    "cross-env": "^6.0.3",
    "electron": "^7.2.4",
    "electron-builder": "^22.6.0",
    "electron-notarize": "^0.3.0",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.2",
    "eslint": "^6.8.0",
    "eslint-plugin-flowtype": "^4.7.0",
    "eslint-plugin-react": "^7.18.3",
    "fetch-mock-jest": "^1.2.7",
    "foreman": "^3.0.1",
    "husky": "^3.1.0",
    "jest-electron": "^0.1.11",
    "lint-staged": "^9.5.0",
    "prettier": "^1.19.1",
    "tslint": "^6.1.2"
  },
  "homepage": "./",
  "main": "./src/electron-starter.js",
  "build": {
    "appId": "GrinPlusPlus",
    "files": [
      "bin/**/*",
      "node_modules/**/*",
      "package.json",
      "!build/bin/mainnet.json",
      {
        "from": "public/",
        "to": "."
      },
      {
        "from": "release/",
        "to": ".",
        "filter": [
          "defaults.json"
        ]
      }
    ],
    "directories": {
      "buildResources": "build"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "GrinPlusPlus",
        "repo": "GrinPlusPlus"
      }
    ],
    "afterSign": "./build/notarize.js",
    "nsis": {
      "artifactName": "Grin++ ${version} Setup.${ext}",
      "oneClick": true,
      "createDesktopShortcut": true,
      "deleteAppDataOnUninstall": false,
      "installerIcon": "./assets/icons/GrinLogo.ico",
      "uninstallerIcon": "./assets/icons/GrinLogo.ico",
      "uninstallDisplayName": "Grin++"
    },
    "win": {
      "target": "nsis",
      "icon": "./assets/icons/GrinLogo.ico",
      "publisherName": "Grin++",
      "verifyUpdateCodeSignature": false
    },
    "asar": true,
    "asarUnpack": [
      "**/bin/**/*"
    ],
    "mac": {
      "category": "public.app-category.finance",
      "target": [
        "dmg",
        "zip"
      ],
      "gatekeeperAssess": false,
      "hardenedRuntime": true,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist"
    },
    "dmg": {
      "artifactName": "Grin++ ${version} Setup.${ext}"
    },
    "linux": {
      "target": [
        "deb",
        "appImage"
      ],
      "icon": "app/static/icons",
      "category": "Finance"
    },
    "deb": {
      "depends": [
        "gconf2",
        "gconf-service",
        "libnotify4",
        "libappindicator1",
        "libxtst6",
        "libnss3",
        "libasound2"
      ],
      "artifactName": "GrinPlusPlus ${version}.${ext}"
    },
    "appImage": {
      "artifactName": "GrinPlusPlus ${version}.${ext}"
    }
  },
  "scripts": {
    "start": "craco start start",
    "build": "craco build",
    "test": "craco test",
    "electron": "electron .",
    "dev": "nf start",
    "lint": "eslint ./src",
    "lint:fix": "eslint --fix ./src/**/*.{ts,tsx}",
    "postinstall": "electron-builder install-app-deps",
    "clean_build:win64": "rmdir /s /q node_modules && npm install && npm run build && xcopy src\\electron-starter.js build\\electron-starter.js* && xcopy src\\notarize.js build\\notarize.js*",
    "dist:win64": "./node_modules/.bin/electron-builder build -c.extraMetadata.main=build/electron-starter.js",
    "release:win64": "./node_modules/.bin/electron-builder build -p 'always' -c.extraMetadata.main=build/electron-starter.js",
    "pack": "rm -Rf node_modules && npm install && npm run build && cp ./src/electron-starter.js ./build/ && cp ./src/notarize.js ./build/ && cp entitlements.mac.plist ./build/ && ./node_modules/.bin/electron-builder build -mwl -c.extraMetadata.main=build/electron-starter.js"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint"
    }
  },
  "jest": {
    "moduleNameMapper": {
      "electron": "<rootDir>/mocks/electronMock.js"
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
